<div id="main">
  <h2>Quem vai:</h2>
  <ul id="go">
  <% @users.each do |user| %>
    <li class="<%=h user.activity %>" id="<%= user.id %>">
    <% unless user.twitter_profile.blank? %>
      <img src="<%= user.twitter_image %>" alt="<%= user.twitter_name %>" style="float:left" />
    <% end %>
      <h2><%=h user.name %></h2>
    <% unless user.bio.blank? %>
      <p><%=h user.bio %></p>
    <% end %>
    <% unless user.twitter_profile.blank? %>
      <p>Siga no Twitter: <a href="http://twitter.com/<%= user.twitter_profile %>">@<%=h user.twitter_profile %></a></p>
    <% end %>
    </li>
  <% end %>
  </ul>
	<p>
		<%= link_to("Mais", users_path(:page => @page + 1), :class => "more") %>
	</p>
</div>
<div id="local">
  <p class="queroparticipar">
    <%= link_to "Quero participar", subscribe_path %>
  </p>
  <div id="sponsor">
    <h3>Apoio:</h3>
    <p><a href="http://jus.uol.com.br" title="Jus Navigandi"><img src="/images/jus.png" alt="Jus Navigandi" /></a></p>
    <p><a href="http://www.ziggi.com.br" title="Zigg Downloads"><img src="/images/zigg.png" alt="Zigg Downloads" /></a></p>
  </div>
</div>